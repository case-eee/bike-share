<% @title = "Weather Dashboard" %>

<div class="jumbotron">
<h1 class="page-header">Weather Dashboard</h1>

<div class="table-responsive">
<table class="table table-bordered">
  <caption id="table-title" class="page-header">Ride Summary: Temperature Breakdown</caption>
  <tr id="table-text">
	<th>High Temperature<br />(&degF)</th>
	<th>Average Rides<br />per Day</th>
	<th>Highest Rides<br />per Day</th>
	<th>Least Rides<br />per Day</th>
  </tr>
  <% @metrics[:temperature].each_pair do |temp_range,metrics_hash| %>
	<tr id="table-text">
	  <td><%= temp_range %></td>
	  <% metrics_hash.each_pair do |metric,value| %>
		<td><%= value %></td>
	  <% end %>
	</tr>
  <% end %>
</table>
</div>

<div class="table-responsive">
<table id="table-text" class="table table-bordered">
  <caption id="table-title" class="page-header">Ride Summary: Precipitation Breakdown</caption>
  <tr>
	<th>Precipitation<br />(inches)</th>
	<th>Average Rides<br />per Day</th>
	<th>Highest Rides<br />per Day</th>
	<th>Least Rides<br />per Day</th>
  </tr>
  <% @metrics[:precipitation].each_pair do |precip_range,metrics_hash| %>
	<tr>
	  <td><%= precip_range %></td>
	  <% metrics_hash.each_pair do |metric,value| %>
		<td><%= value %></td>
	  <% end %>
	</tr>
  <% end %>
</table>
</div>

<div class="table-responsive">
<table id="table-text" class="table table-bordered">
  <caption id="table-title" class="page-header">Ride Summary: Wind Speed Breakdown</caption>
  <tr>
	<th>Mean Wind Speed<br />(mph)</th>
	<th>Average Rides<br />per Day</th>
	<th>Highest Rides<br />per Day</th>
	<th>Least Rides<br />per Day</th>
  </tr>
  <% @metrics[:wind].each_pair do |wind_range,metrics_hash| %>
