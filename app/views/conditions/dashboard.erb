	  <td><%= wind_range %></td>
	  <% metrics_hash.each_pair do |metric,value| %>
		<td><%= value %></td>
	  <% end %>
	</tr>
  <% end %>
</table>
</div>

<div class="table-responsive">
<table class="table table-bordered">
