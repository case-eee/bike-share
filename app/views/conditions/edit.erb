<h1>Edit Weather Details</h1>

<form action="/conditions/<%= @condition.id %>" method="POST">
  <input type="hidden" name="_method" value="PUT">
  <div class="form-group">
    <label>Date</label>
    <input class="form-control" type="date" name="conditions[date]" value="<%= @condition.date %>" required />

  </div>
  <div class="form-group">
    <label>Max Temp (F)</label>
    <input class="form-control" type = "number" name = "conditions[max_temperature_f]" value = "<%= @condition.max_temperature_f %>" id = "conditions-max_temperature_f" required />
  </div>


  <div class="form-group">
    <label>Mean Temperature (F)</label>
    <input class="form-control" type = "number" name = "conditions[mean_temperature_f]" value = "<%= @condition.mean_temperature_f %>" id = "conditions-mean_temperature_f" required />
  </div>

  <div class="form-group">
    <label>Min Temp (F)</label>
    <input class="form-control" type = "number" name = "conditions[min_temperature_f]" value = "<%= @condition.min_temperature_f %>" id = "conditions-min_temperature_f" required />
  </div>

  <div class="form-group">
    <label>Mean Humidity</label>
    <input class="form-control" type = "number" name = "conditions[mean_humidity]" value = "<%= @condition.mean_humidity %>" id = "conditions-mean_humidity" required />
  </div>

  <div class="form-group">
    <label>Mean Visibility (miles)</label>
    <input class="form-control" type = "number" name = "conditions[mean_visibility_miles]" value = "<%= @condition.mean_visibility_miles %>" id = "conditions-mean_visibility_miles" required />
  </div>

  <div class="form-group">
    <label>Max Wind Speed (mph)</label>
    <input class="form-control" type = "number" name = "conditions[max_wind_speed_mph]" value = "<%= @condition.max_wind_speed_mph %>" id = "max_wind_speed_mph" required />
  </div>

  <div class="form-group">
    <label>Precipation (inches)</label>
    <input class="form-control" type = "number" name = "conditions[precipitation_inches]" value = "<%= @condition.precipitation_inches %>" id = "precipitation_inches" required />
  </div>
  <input class="btn btn-warning" type="submit" value="Update">
</form>
