<% @title = "Edit Weather Info" %>

<div class="edit-conditions">
<div class="jumbotron">
  <div class="container">
    <form action="/conditions/<%= @condition.id %>" method="POST">
  <h1 class="page-header">Edit Weather Information
        <input id="edit-large" class="btn btn-warning btn-small" type="submit" value="Edit"></h1>
    <input type="hidden" name="_method" value="PUT" />

<div class="form group-row">
  <div class="form-id">
    <label for="input" class="col-xs-2 col-form-label">Date:</label></div>
    <div class="col-xs-10">
    <input class="form-control" type="date" name="condition[date]" value="<%= @condition.date %>" /><br/>
  </div>
</div>

<div class="form group-row">
  <div class="form-id">
    <label for="input" class="col-xs-2 col-form-label">Maximum Temp (&deg;F):</label></div>
    <div class="col-xs-10">
    <input class="form-control" type="integer" name="condition[max_temperature_f]" value="<%= @condition.max_temperature_f %>" onclick='this.value = "";'/><br/>
  </div>
</div>

<div class="form group-row">
  <div class="form-id">
    <label for="input" class="col-xs-2 col-form-label">Minimum Temp (&deg;F):</label></div>
    <div class="col-xs-10">
    <input class="form-control" type="integer" step="any" name="condition[min_temperature_f]" value="<%= @condition.min_temperature_f %>" onclick='this.value = "";'><br/>
  </div>
</div>

<div class="form group-row">
  <div class="form-id">
    <label for="input" class="col-xs-2 col-form-label">Mean Temp (&deg;F):</label></div>
    <div class="col-xs-10">
    <input class="form-control" type="integer" step="any" name="condition[mean_temperature_f]" value="<%= @condition.mean_temperature_f %>" onclick='this.value = "";'><br/>
  </div>
</div>

<div class="form group-row">
  <div class="form-id">
    <label for="input" class="col-xs-2 col-form-label">Mean Humidity:</label></div>
    <div class="col-xs-10">   
    <input class="form-control" type="integer" step="any" name="condition[mean_humidity]" value="<%= @condition.mean_humidity %>" onclick='this.value = "";'><br/>
  </div>
</div>

<div class="form group-row">
  <div class="form-id">
    <label for="input" class="col-xs-2 col-form-label">Mean Visibility (Miles):</label></div>
    <div class="col-xs-10">
    <input class="form-control" type="integer" step="any" name="condition[mean_visibility_miles]" value="<%= @condition.mean_visibility_miles %>" onclick='this.value = "";'><br/>
  </div>
</div>

<div class="form group-row">
  <div class="form-id">
    <label for="input" class="col-xs-2 col-form-label">Mean Wind Speed (MPH):</label></div>
    <div class="col-xs-10">
    <input class="form-control" type="integer" step="any" name="condition[mean_wind_speed_mph]" value="<%= @condition.mean_wind_speed_mph %>" onclick='this.value = "";'><br/>
  </div>
</div>

<div class="form group-row">
  <div class="form-id">
    <label for="input" class="col-xs-2 col-form-label">Precipitation (Inches):</label></div>
    <div class="col-xs-10">
    <input class="form-control" type="integer" step="any" name="condition[precipitation_inches]" value="<%= @condition.precipitation_inches %>" onclick='this.value = "";'><br/>
  </div>
</div>

  </form>
</div>

    