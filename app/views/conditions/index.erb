<h1>Conditions</h1>

  <% @conditions.each do |c|%>
    <p> ID: <%= c.id %>,
        Date: <%= c.date %>,
        Max Temperature: <%= c.max_temperature %>,
        Mean Temperature: <%= c.mean_temperature %>,
        Min Temperature: <%= c.min_temperature %>,
        Mean Humidity: <%= c.mean_humidity %>,
        Mean Visibility (Miles): <%= c.mean_visibility %>,
        Mean Wind Speed (mph): <%= c.mean_wind_speed %>,
        Precipitation (inches): <%= c.precipitation %>
    </p>
    <form action="/conditions/<%= c.id %>" method="post">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Delete"/>
    </form>
  <% end %>
