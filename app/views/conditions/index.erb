<% @title = "All Weather Conditions" %>

<div class="all-conditions">
  <h1>All Weather Conditions</h1>
  <form action="/conditions/new" method="GET">
    <input type="submit" value="Create New">
  </form>
  <% @conditions.each do |condition| %>
    <div class="condition-summary">
      <ul>
        <li><a href="/conditions/<%= condition.id %>"><%= condition.date %></a></li>
        <li>Max Temperature (F): <%= condition.max_temperature_f %></li>
        <li>Min Temperature (F): <%= condition.min_temperature_f %></li>
        <li>Mean Temperature (F): <%= condition.mean_temperature_f %></li>
        <li>Mean Humidity: <%= condition.mean_humidity %></li>
        <li>Mean Visibility (miles): <%= condition.mean_visibility_miles %></li>
        <li>Mean Wind Speed (mph): <%= condition.mean_wind_speed_mph %></li>
        <li>Precipitation (inches): <%= condition.precipitation_inches %></li>
      </ul>
      <form action="/conditions/<%= condition.id %>/edit" method="GET">
        <input type="submit" value="Edit">
      </form>
      <form action="/conditions/<%= condition.id %>" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Delete">
      </form>
    </div>
  <% end %>
  <% unless @page < 1 %>
    <a href="/conditions?page=<%= @page - 1 %>">Back</a>
  <% end %>
  <a href="/conditions?page=<%= @page + 1 %>">Forward</a>
</div>