<% @title = "Add Weather Information" %>

<div class="add-new-station">
<div class="jumbotron">
  <div class="container">
  <form class="edit" method="POST" action="/conditions">
  <h1 class="page-header">Add Weather Information
    <input id="edit-large" class="btn btn-warning btn-small" type="submit" value="Create"></h1>

<div class="form group-row">
  <div class="form-id">
    <label for="input" class="col-xs-2 col-form-label">Date:</label></div>
    <div class="col-xs-10">
    <input class="form-control" type="date" name="condition[date]" value="Date" onclick='this.value = "";'/><br/>
  </div>
</div>


<div class="form group-row">
  <div class="form-id">
    <label for="input" class="col-xs-2 col-form-label">Maximum Temp (&deg;F):</label></div>
    <div class="col-xs-10">
    <input class="form-control" type="integer" name="condition[max_temperature_f]" value="Maximum Temp (&deg;F)" onclick='this.value = "";'/><br/>
  </div>
</div>

<div class="form group-row">
  <div class="form-id">
    <label for="input" class="col-xs-2 col-form-label">Minimum Temp (&deg;F):</label></div>
    <div class="col-xs-10">
    <input class="form-control" type="integer" step="any" name="condition[min_temperature_f]" value="Minimum Temp (&deg;F)" onclick='this.value = "";'><br/>
  </div>
</div>

<div class="form group-row">
  <div class="form-id">
    <label for="input" class="col-xs-2 col-form-label">Mean Temp (&deg;F):</label></div>
    <div class="col-xs-10">
    <input class="form-control" type="integer" step="any" name="condition[mean_temperature_f]" value="Mean Temp (&deg;F)" onclick='this.value = "";'><br/>
  </div>
</div>

<div class="form group-row">
  <div class="form-id">
    <label for="input" class="col-xs-2 col-form-label">Mean Humidity:</label></div>
    <div class="col-xs-10">   
    <input class="form-control" type="integer" step="any" name="condition[mean_humidity]" value="Mean Humidity" onclick='this.value = "";'><br/>
  </div>
</div>

<div class="form group-row">
  <div class="form-id">
    <label for="input" class="col-xs-2 col-form-label">Mean Visibility (Miles):</label></div>
    <div class="col-xs-10">
    <input class="form-control" type="integer" step="any" name="condition[mean_visibility_miles]" value="Mean Visibility (Miles)" onclick='this.value = "";'><br/>
  </div>
</div>

<div class="form group-row">
  <div class="form-id">
    <label for="input" class="col-xs-2 col-form-label">Mean Wind Speed (MPH):</label></div>
    <div class="col-xs-10">
    <input class="form-control" type="integer" step="any" name="condition[mean_wind_speed_mph]" value="Mean Wind Speed (MPH)" onclick='this.value = "";'><br/>
  </div>
</div>

<div class="form group-row">
  <div class="form-id">
    <label for="input" class="col-xs-2 col-form-label">Precipitation (Inches):</label></div>
    <div class="col-xs-10">
    <input class="form-control" type="integer" step="any" name="condition[precipitation_inches]" value="Precipitation (Inches)" onclick='this.value = "";'><br/>
  </div>
</div>

  </form>
</div>

