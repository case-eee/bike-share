<% @title = "Edit Station Info" %>

<div class="form">
  <h1>Edit Station Information</h1>
  <form action="/stations/<%= @station.id %>" method="POST">
    <input type="hidden" name="_method" value="PUT" />
    <input type="text" name="station[name]" value="<%= @station.name %>" /><br/>
    <input type="integer" name="station[dock_count]" value="<%= @station.dock_count %>" /><br/>
    <input type="integer" step="any" name="station[lat]" value="Latitude" onclick='this.value = "";'><br/>
    <input type="integer" step="any" name="station[long]" value="Longitude" onclick='this.value = "";'><br/>
    <select class="form_dropdown" name="station[city_id]">
      <option selected="selected" value="<%= @station.city_id %>"><%= @station.city.name.upcase %></option>
      <% @cities.sort_by(&:name).each do |city| %>
        <option value="<%= city.id %>"><%= city.name.upcase %></option>
      <% end %>
    </select><br/>
    <input type="text" name="station[installation_date]" value="<%= @station.installation_date %>" /><br/>
    <input type="submit" value="Edit "/>
  </form>
  
</div>

    