<h1>Edit Trip</h1>
<form action="/trips/<%= @trip.id %>" method="POST">
  <input type="hidden" name="_method" value="PUT">
  <div class="form-group">
    <label>Duration</label>
    <input class="form-control" type="integer" name="trips[duration]" value="<%= @trip.duration %>" required />
  </div>
  <div class="form-group">
    <label>Start Date and Time</label>
    <input class="form-control" type="datetime" name="trips[start_date]" value="<%= @trip.start_date %>" required />
  </div>
  <div class="form-group">
    <label>Starting Station</label>
    <input class="form-control" type="integer" name="trips[start_station_name]" value="<%= @trip.start_station.name %>" required />
  </div>
  <div class="form-group">
    <label>End Date and Time</label>
    <input class="form-control" type="datetime" name="trips[end_date]" value="<%= @trip.end_date %>" required />
  </div>
  <div class="form-group">
    <label>Ending Station</label>
    <input class="form-control" type="integer" name="trips[end_station_name]" value="<%= @trip.end_station.name %>" required />
  </div>
  <div class="form-group">
    <label>Bike ID</label>
    <input class="form-control" type="integer" name="trips[bike_id]" value="<%= @trip.bike_id %>" require />
  </div>
  <div class="form-group">
    <label>Subscription Type</label>
    <input class="form-control" type="integer" name="trips[subscription_type]" value="<%= @trip.subscription.name %>" required />
  </div>
  <div class="form-group">
    <label>User's Zipcode</label>
    <input class="form-control" type="integer" name="trips[zipcode]" value="<%= @trip.zipcode %>" required />
  </div>
  <input class="btn btn-warning" type="submit" value="Update">
</form>