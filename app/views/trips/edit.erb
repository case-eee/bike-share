
<h1 class="edit-station-page-title">Edit Trip</h1>
<form action="/trips/<%= @trip.id %>" method="post">
  <label for="trip[duration_in_seconds]" class="new-trip-prompt">Duration in seconds:</label>
  <input type="hidden" name="_method" value="PUT" />
  <div class="form-group row">
    <input  class="form-control" type="integer" name="trip[duration_in_seconds]" value="<%= @trip.duration_in_seconds %>"/>
  </div>
  <div class="form-group row">
    <label for="trip[start_date]" class="new-trip-prompt">Start Date:</label>
    <input  class="form-control" type="date" name="trip[start_date]" value="<%= @trip.start_date %>">
  </div>
  <div class="form-group row">
    <label for="trip[end_date]" class="new-trip-prompt">End Date:</label>
      <input  class="form-control" type="date" name="trip[end_date]" value="<%= @trip.end_date %>" placeholder="<%= @trip.end_date %>">
    </div>
  <div class="form-group row">
    <label for="trip[start_station]" class="new-trip-prompt">Start Station:</label>
    <input class"form-control" type="text" name="start_station[name]" list="stations" value="<% @stations.find(@trip.start_station_id).name %>" >
    <datalist id="stations"> <% @stations.each do |station| %>
      <option value="<%= station.name %>" id="<%= station.name %>"/>
        <% end %>
    </datalist>
  </div>
  <div class="form-group row">
    <label for="trip[end_station]" class="new-trip-prompt">End Station:</label>
    <input class"form-control" type="text" name="end_station[name]" list="stations" placeholder="<% @trip.end_station_id %>">
    <datalist id="stations"> <% @stations.each do |station| %>
      <option value="<%= station.name %>" id="<%= station.name %>"/>
        <% end %>
    </datalist>
  </div>
  <div class="form-group row">
    <label for="trip[bike_id]" class="new-trip-prompt">Bike ID:</label>
    <input  class="form-control" type="integer" name="trip[bike_id]" value="<%= @trip.bike_id %>" placeholder="<%= @trip.bike_id %>">
  </div>
  <div class="form-group row">
    <label for="trip[subscription]" class="new-trip-prompt">Subscription Type:</label>
    <input  class="form-control" type="string" name="trip[subscription]" value="<%= (@trip.subscription).name %>">
  </div>
  <div class="form-group row">
    <label for="trip[zipcode_id]" class="new-trip-prompt">Zipcode:</label>
    <input  class="form-control" type="integer" name="trip[zipcode]" value="<%= (@trip.zipcode).zipcode %>">
  </div>
    <input  class="form-control btn btn-primary button" type="submit" value="Update station"/>
</form>
