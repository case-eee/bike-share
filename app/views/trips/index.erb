<h1>All Trips</h1>
<a class="btn btn-primary" href="/trips/new">New Trip</a>
<h3>Total Trips: <%= @trips.count %></h3>

<table class="table table-striped table-hover">
  <tr>
    <th>Id</th>
    <th>Duration</th>
    <th>Start Station</th>
    <th>Start Date and Time</th>
    <th>End Station</th>
    <th>End Date and Time</th>
    <th>Bike ID</th>
    <th>Subscription Type</th>
    <th>User Zipcode</th>
    <th></th>
    <th></th>
  </tr>
  <% @trips.each do |trip| %>
  <tr>
    <td><a href="/trips/<%=trip.id%>"><%=trip.id %></a></td>
    <td><%= trip.duration %></td>
    <td><%= trip.start_station_id %></td>
    <td><%= trip.start_date %></td>
    <td><%= trip.end_station_id %></td>
    <td><%= trip.end_date %></td>
    <td><%= trip.bike_id %></td>
    <td><%= trip.subscription.name %></td>
    <td><%= trip.zipcode %></td>
    <td><a class="btn btn-warning" href="/trips/<%= trip.id %>/edit">Update</a></td>

    <td>
      <form action="/trips/<%= trip.id %>" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input class="btn btn-danger" type="submit" value="Delete">
      </form>
    </td>
  </tr>
  <% end %>
</table>

<%= will_paginate @trips %>
